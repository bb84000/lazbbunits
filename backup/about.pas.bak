unit about;

{$mode objfpc}{$H+}

interface

uses
  Classes, SysUtils, Forms, Controls, Graphics, Dialogs, ExtCtrls, StdCtrls,
  Buttons, bbutils;

type

  { TAboutBox }

  TAboutBox = class(TForm)
    BitBtn1: TBitBtn;
    Image1: TImage;
    LProductName: TLabel;
    LWebSite: TLabel;
    LVersion: TLabel;
    LUpdate: TLabel;
    LCopyright: TLabel;
    Panel1: TPanel;
    procedure FormActivate(Sender: TObject);
    procedure LURLClick(Sender: TObject);
  private

  public
    ErrorMessage: String;
    UrlUpdate: String;
    UrlWebsite: String;
    LastUpdate: TDateTime;

  end;

var
  AboutBox: TAboutBox;

implementation

{$R *.lfm}

{ TAboutBox }

procedure TAboutBox.LURLClick(Sender: TObject);
var
  sendername: string;
  url: string;
begin
  SenderName:= UpperCase(Tcomponent(Sender).Name);
  if SenderName= 'LUPDATE' then url:= UrlUpdate;
  if SenderName= 'LWEBSITE' then url:= UrlWebsite;
  If length(url) > 0 then
  if not Exec (handle, Url) then
  begin
   If length (ErrorMessage) > 0 then ShowMessage(ErrorMessage) else  ShowMessage ('Erreur de lancement de l''URL');
  end else LastUpdate:= Trunc(now());
end;

procedure TAboutBox.FormActivate(Sender: TObject);
begin
  LWebSite.Caption:= 'Web site: '+UrlWebsite;
end;

end.

